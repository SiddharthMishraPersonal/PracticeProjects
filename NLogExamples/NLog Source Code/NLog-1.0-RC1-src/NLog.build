    <target name="binary_snapshot" depends="build">
        <zip zipfile="${binary_snapshot.name}">
            <fileset basedir="build/${buildsubdir}">
                <include name="bin/*" />
            </fileset>
            <fileset basedir=".">
                <include name="LICENSE.txt" />
